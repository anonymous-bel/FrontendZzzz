package co.bel.frontend;
import java.io.IOException;
import java.util.List;

import javafx.fxml.FXML;
import javafx.fxml.FXMLLoader;
import javafx.scene.Parent;
import javafx.scene.layout.GridPane;
import javafx.scene.text.Text;
public class CartItemController {

    @FXML
    private GridPane cartGridPane;

    // Other existing methods...

    public void displayCartItems(List<CartItem> cartItems) throws IOException {
        int rowIndex = 1; // Start from row 1 as row 0 is for column headers
        FXMLLoader loader = new FXMLLoader(getClass().getResource("cart_ex.fxml"));
        Parent root = loader.load();

        CartItemController controller = loader.getController();
        for (CartItem cartItem : cartItems) {
        	System.out.println(cartItem.getItem().getItem_name());
        	System.out.println(cartItem.getItem().getItem_id());
        	System.out.println(cartItem.getItem().getItem_price());
        	System.out.println(cartItem.getQuantity());
            addTextToGrid(controller,cartItem.getItem().getItem_name(), 0, rowIndex);
            addTextToGrid(controller,String.valueOf(cartItem.getQuantity()), 1, rowIndex);
            addTextToGrid(controller,String.valueOf(cartItem.getItem().getItem_price()), 2, rowIndex);
            addTextToGrid(controller,String.valueOf(cartItem.getQuantity() * cartItem.getItem().getItem_price()), 3, rowIndex);

            rowIndex++;
        }

        // Calculate overall price and display it
        double overallPrice = cartItems.stream()
                .mapToDouble(item -> item.getQuantity() * item.getItem().getItem_price())
                .sum();
        addTextToGrid(controller,"Overall Price: " + overallPrice, 2, rowIndex);
    }

    private void addTextToGrid(CartItemController controller,String text, int columnIndex, int rowIndex) {
        Text newText = new Text(text);
        newText.wrappingWidthProperty().setValue(100); // Adjust the wrapping width as needed
        controller.cartGridPane.add(newText, columnIndex, rowIndex);
        System.out.println("Text added to GridPane: " + text + ", Column: " + columnIndex + ", Row: " + rowIndex);
    }
}
